<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/RoomNameListInfo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Floor: Basement, Room: Kitchen"
        android:gravity="center"
        android:textColor="@color/primaryDark"
        android:layout_marginBottom="15dp"
        android:textAppearance="?android:attr/textAppearanceMedium"/>
    <Button
        android:id="@+id/noButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_selector"
        android:text="Tap Room Name To Add To Level"
        android:textColor="@color/white"
        android:textSize="17dp" />
    <ListView
        android:id="@+id/RoomsNameList"
        android:layout_height="0dip"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:padding="@dimen/default_horizontal_padding"/>
    <Button
        android:id="@+id/BackToLevelActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_selector"
        android:text="Back"
        android:textColor="@color/white"
        android:textSize="17dp" />
</LinearLayout>