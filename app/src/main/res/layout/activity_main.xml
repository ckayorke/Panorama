<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1.1"
    android:gravity="center"
    android:weightSum="5" >
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_selector"
        android:text="Turn Bosch Device On, Tap Referesh Button Above"
        android:textColor="@color/white"
        android:textSize="15dp" />
    <TextView
        android:id="@+id/InfoMain1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Floor: Basement, Room: Kitchen"
        android:gravity="center"
        android:textColor="@color/primaryDark"
        android:textAppearance="?android:attr/textAppearanceMedium"/>
    <ListView
        android:id="@+id/device_list_view"
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:choiceMode="singleChoice"
        android:listSelector="#00000000"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"/>
    <TextView
        android:id="@+id/device_text_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:text="@string/no_device_connected"
        android:textSize="15sp"
        android:gravity="center_horizontal"
        android:layout_marginBottom="1dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center" >
        <TextView
            android:id="@+id/measure1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/white" />
        <TextView
            android:id="@+id/measure2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/white" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center" >
        <TextView
            android:id="@+id/measure3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/white" />
        <TextView
            android:id="@+id/measure4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/white" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center" >
        <TextView
            android:id="@+id/measure5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/white" />
        <TextView
            android:id="@+id/measure6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/white" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center" >
        <TextView
            android:id="@+id/measure7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_weight="1"
            android:textSize="18sp"
            android:gravity="center"
            android:background="@color/white" />
        <TextView
            android:id="@+id/measure8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/white" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center" >
        <TextView
            android:id="@+id/measure9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/white" />
        <TextView
            android:id="@+id/measure10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/white" />
    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/wall1"
        android:layout_marginBottom="10dp"
        android:hint="Measure Length Of Room" />
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <Button
            android:id="@+id/manipulate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_selector"
            android:text="Done"
            android:textColor="@color/white"
            android:layout_weight=".49" />

        <Button
            android:id="@+id/CancelBtn"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_selector"
            android:text="Cancel"
            android:textColor="@color/white"
            android:layout_weight=".49" />
    </LinearLayout>
</LinearLayout>