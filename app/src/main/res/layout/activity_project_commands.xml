<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ListView
        android:id="@+id/LevelList"
        android:layout_height="300dip"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:padding="@dimen/default_horizontal_padding"/>
    <Button
        android:id="@+id/AddBasement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_selector"
        android:text="Add Basement"
        android:textColor="@color/white"
        android:textSize="17dp" />
    <Button
        android:id="@+id/AddFirstFloor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_selector"
        android:text="Add First Floor"
        android:textColor="@color/white"
        android:textSize="17dp"/>
    <Button
        android:id="@+id/AddSecondFloor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_selector"
        android:text="Add Second Floor"
        android:textColor="@color/white"
        android:textSize="17dp" />
    <Button
        android:id="@+id/AddThirdFloor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_selector"
        android:text="Add Third Floor"
        android:textColor="@color/white"
        android:textSize="17dp"/>
    <Button
        android:id="@+id/AddFourthFloor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_selector"
        android:text="Add Fourth Floor"
        android:textColor="@color/white"
        android:textSize="17dp" />
    <Button
        android:id="@+id/Surrounding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_selector"
        android:text="Take Surrounding Pictures"
        android:textColor="@color/white"
        android:textSize="17dp" />
    <Button
        android:id="@+id/checkForCompleteness"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_selector"
        android:text="Check Project For Completeness"
        android:textColor="@color/white"
        android:textSize="17dp" />


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <Button
            android:id="@+id/GoToProjects"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_selector"
            android:text="Back"
            android:textColor="@color/white"
            android:layout_weight=".49" />

        <Button
            android:id="@+id/Entrance"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_selector"
            android:text="Take Entrance Picture"
            android:textColor="@color/white"
            android:layout_weight=".49" />
    </LinearLayout>
</LinearLayout>
